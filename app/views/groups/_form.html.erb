<%= form_with(model: group) do |f| %>
  <%= show_errors(group) %>
  <ul>
    <% group.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <% end %>
  </ul>

  <div class="field">
    <%= f.label :avatar, style: 'display:none' %>
    <%= f.file_field :avatar, direct_upload: true, accept: 'image/jpeg, image/gif, image/png'%>
  </div>
  <div class="field">
    <%= f.label :name, style: 'display:none' %>
    <%= f.text_field :name, placeholder: 'Group name', class: 'login-box-name' %>
  </div>
  <div class="actions">
    <%= f.submit 'Create group', class: 'login-box-btn btn btn-primary mt-4' %>
  </div>
<% end %>
